@model IEnumerable<VehicleRegistrationWebApp.Models.VehicleViewModel>

@{
    ViewData["Title"] = "All Vehicles";
}

<div>
    @ViewBag.Message
</div>
<div>
    <h1>@ViewData["Title"]</h1>
    @if (ViewBag.ImagePath != null)
    {
        <div style="float: right; margin-right: 10px;">
            <img src="@ViewBag.ImagePath" alt="Uploaded Image" style="max-width: 200px; max-height: 200px;" />
        </div>
    }
</div>
<span>
    <a asp-controller="Vehicle" asp-action="GetVehiclesExcel" class="ml btn btn-light border-3 align-content-end">Download ExcelFile</a>
    <form method="post" enctype="multipart/form-data" asp-action="UploadImage" asp-controller="Home">
        <input type="file" name="file" id="fileInput" />
        <button type="submit">Upload</button>
    </form>
</span>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Vehicle Number</th>
            <th>Description</th>
            <th>Owner Name</th>
            <th>Address</th>
            <th>Owner Contact Number</th>
            <th>Email</th>
            <th>Vehicle Class</th>
            <th>Fuel Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var vehicle in Model)
            {
                <tr>
                    <td>@vehicle.VehicleNumber</td>
                    <td>@vehicle.Description</td>
                    <td>@vehicle.VehicleOwnerName</td>
                    <td>@vehicle.OwnerAddress</td>
                    <td>@vehicle.OwnerContactNumber</td>
                    <td>@vehicle.Email</td>
                    <td>@vehicle.VehicleClass</td>
                    <td>@vehicle.FuelType</td>
                    <td>
                        <a asp-controller="Vehicle" asp-action="EditVehicleDetails" asp-route-vehicleId="@vehicle.VehicleId" class="btn btn-primary">Edit</a>
                        <a asp-controller="Vehicle" asp-action="DeleteVehicle" asp-route-vehicleId="@vehicle.VehicleId" class="btn btn-primary">Delete</a>
                        <a asp-controller="Vehicle" asp-action="GetVehicleById" asp-route-vehicleId="@vehicle.VehicleId" class="btn btn-primary">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center">No vehicles found.</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <h3>Add New Vehicle</h3>
    <a asp-controller="Vehicle" asp-action="AddVehicleDetails" class="btn btn-primary">Add Vehicle</a>
</div>